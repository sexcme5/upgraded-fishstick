    <!-- Script -->
    <script>
        // Transport Controls
        const playButton = document.querySelector('button:contains("Play")');
        const stopButton = document.querySelector('button:contains("Stop")');
        const recordButton = document.querySelector('button:contains("Record")');

        playButton.addEventListener('click', () => {
            // Implement play functionality
        });

        stopButton.addEventListener('click', () => {
            // Implement stop functionality
        });

        recordButton.addEventListener('click', () => {
            // Implement record functionality
        });

        // Add Track Functionality
        const addTrackButton = document.querySelector('button:contains("Add Track")');
        addTrackButton.addEventListener('click', () => {
            const tracksList = document.querySelector('.track-list');
            const newTrack = document.createElement('div');
            newTrack.className = 'track-item';
            newTrack.innerHTML = `
                <span class="track-name">Track ${tracksList.children.length + 1}</span>
                <button class="transport-button">Delete</button>
            `;
            tracksList.appendChild(newTrack);
        });

        // Tempo Controls
        const tempoInput = document.querySelector('input[type="number"]');
        tempoInput.addEventListener('change', (e) => {
            // Update BPM value
            console.log('BPM changed to:', e.target.value);
        });

        // Metronome
        const metronomeCheckbox = document.querySelector('input[type="checkbox"]');
        metronomeCheckbox.addEventListener('change', (e) => {
            // Toggle metronome on/off
            console.log('Metronome:', e.target.checked);
        });

        // Time Signature
        const timeSignatureSelect = document.querySelector('select');
        timeSignatureSelect.addEventListener('change', (e) => {
            // Update time signature
            console.log('Time Signature changed to:', e.target.value);
        });
    </script>
